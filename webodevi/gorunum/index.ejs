    <div class="container-fluid" style="margin-top: 50px;">
        <div class="row">
          <div class="col-md-4" id="yapýlanGörevler" style="background-color:darkgreen; padding: 18px;">
            <% Gorev.forEach(gorev => { 
                if(gorev.gorevDurumu=="BITTI"){
                %>
                <li>
                    <%= gorev.gorevAdi %> | <%= gorev.gorevBaslangicTarihi %>
                    <a href="javascript:void(0);" class="float-right remove-todo-item"></i></a>
                </li>
                <% }}) %>

        </div>
          <div class="col-md-4" id="beklenenGörevler" style="background-color:yellow; padding: 18px;">
            <% Gorev.forEach(gorev => { 
                if(gorev.gorevDurumu=="DEVAM EDIYOR")
                {
                %>
                
                <li>
                    <%= gorev.gorevAdi %> | <%= gorev.gorevBaslangicTarihi %>
                    <a href="javascript:void(0);" class="float-right remove-todo-item"></i></a>

                </li>
                <% }}) %>
        </div>
          <div class="col-md-4" id="yapýlmayanGörevler" style="background-color:aqua; padding: 18px;">
